
<h1 class="ui header">Categories</h1>

  <p id="notice"><%= notice %></p>

  <table class='ui blue table'>
  <thead>
    <tr>
        <th>Text</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @categories.each do |category| %>
      <tr>
        <td><%= category.text %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:'tiny ui button' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'tiny ui button' %></td>
      </tr>
    <% end %>

  </tbody>

  </table>

  <br>

  <%= link_to 'New Category', new_category_path, class:'ui black button' %>