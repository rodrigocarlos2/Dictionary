
<br>

<h1 class"ui header">Words</h1>

  <p id="notice"><%= notice %></p>

  <table class='ui blue table'>
  <thead>
    <tr>
        <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @words.each do |word| %>
      <tr>
        <td><%= word.text %></td>
        <td><%= link_to 'Show', word, class:'tiny ui button' %></td>
        <td><%= link_to 'Edit', edit_word_path(word), class:'tiny ui button' %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }, class:'tiny ui button' %></td>
      </tr>
    <% end %>

  </tbody>

  </table>

  <br>

  <%= link_to 'New Word', new_word_path, class:'ui black button' %>
