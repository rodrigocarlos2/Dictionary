
<br>

<h1 class"ui header">Meanings</h1>

  <table class='ui blue table'>
  <thead>
    <tr>
        <th>Text</th>
      <th>Word</th>
        <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @meanings.each do |meaning| %>
      <tr>
        <td><%= meaning.text %></td>
        <% w = Word.find_by_id(meaning.word_id) %>
        <td><%= w.text %></td>
        <td><%= link_to 'Show', meaning %></td>
        <td><%= link_to 'Edit', edit_meaning_path(meaning) %></td>
        <td><%= link_to 'Destroy', meaning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>

  </table>